<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="normal_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="normal_text_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="normal_text_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="medium_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="medium_text_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="medium_text_black_n_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="large_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_17sdp</item>
    </style>

    <style name="large_text_black_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="card_normal_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="card_normal_text_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="card_medium_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="card_large_text_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="medium_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="heading_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="heading_text_with_arrow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@null</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="view_vertical">
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="view_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="NavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/ActiveText</item>
        <item name="itemTextAppearanceInactive">@style/InactiveText</item>
    </style>

    <style name="ActiveText">
        <item name="android:textColor">@color/teal_200</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="InactiveText">
        <item name="android:textColor">#ffcc00</item>
    </style>



    <style name="AlertDialogText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="iv_icons_profile_phone">
        <item name="android:layout_width">@dimen/_15sdp</item>
        <item name="android:layout_height">@dimen/_15sdp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="menu_button_w_n_h_for_tablet">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
    </style>

    <style name="card_off_tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/_2sdp</item>
    </style>

    <style name="card_text_view_details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_8sdp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/_5sdp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/_20sdp</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/_5sdp</item>
        <item name="android:background">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="icons_w_n_h_for_tablet">
        <item name="android:layout_width">@dimen/_15sdp</item>
        <item name="android:layout_height">@dimen/_15sdp</item>
    </style>

    <style name="search">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:hint">Search</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="MaterialAlertDialogText">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textSize">26sp</item>
    </style>


    <style name="SpinnerTab" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textSize">26sp</item>
    </style>

</resources>